@model IGames.Domain.DomainModels.Order

<div class="container">
    <div class="p-5" style="background-color: #ffde4d">
        <h1>Order details</h1>
    </div>
    <hr class="p-3" />
    <div>
        <a class="btn btn-link" asp-controller="Order" asp-action="Index">
            Back to order list
        </a>
    </div>
    <div class="row">
        <p>User: @Model.ApplicationUser.Email</p> 
        <p>Date of order: @Model.DateOfOrder</p>
    </div>
    @for (int i = 0; i < Model.VideoGamesInOrder.Count(); i++)
    {
        var item = Model.VideoGamesInOrder.ElementAt(i).Game;
        var quantity = Model.VideoGamesInOrder.ElementAt(i).Quantity;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" style="max-width: 300px; max-height:200px" src="@item.Image" alt="Game poster">
                    <div class="card-body">
                        <h3>Game Title: @item.GameTitle</h3>
                        <p>Game price: @item.Price $</p>
                        <p>Game genre: @item.Genre</p>
                        <p>Ordered Quantity: @quantity</p>
                    </div>

                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }

    }

</div>