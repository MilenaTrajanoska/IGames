@model IGames.Domain.DTO.AddToCartDTO

@{
    ViewData["Title"] = "Add To Shopping Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-5">
    <h1>Add the selected video game to your shopping cart:</h1>
</div>

<hr class="p-3" />
@if (ViewData["Error Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error Message"]
    </div>
}

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddVideoGameToCart" method="post">
            <input type="hidden" asp-for="VideoGameId" />
            <div class="form-group">
                <label asp-for="SelectedVideoGame.GameTitle"></label>
                <input disabled asp-for="SelectedVideoGame.GameTitle" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>